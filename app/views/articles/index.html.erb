<% @articles.each do |article| %>
	<div class = "row">
	<div class="col-xs-12">
			<p class="lead"><u><%= link_to article.title, article_path(article) %></u></p>
 	</div>
 	</div>

 	<div class = "row">
 	<div class="col-xs-12">

		<i><%= article.text %></i>
	</div>
	</div>

	<div class = "row">
	<div class="col-xs-12">
		

		<br>
		<p>
			<%= link_to 'Show', article_path(article) %>
			<% if article.author == current_user.id.to_s %> |
				<%=link_to 'Edit', edit_article_path(article) %> |
				<%= link_to "Delete", article_path(article), method: :delete, data: {confirm: 'Do you really want to delete this message?'}%>
			<% end %>

		</p>

	</div>
	</div>

 <hr />

<% end %>
